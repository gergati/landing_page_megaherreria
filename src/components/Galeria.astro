---
import "photoswipe/style.css";
---

<h3 class="text-2xl font-extrabold uppercase text-gray-900 mt-20" id="nosotros">
    Algunos de nuestros trabajos
</h3>
<div
    class="grid md:grid-cols-2 grid-cols-1 max-w-6xl gap-4 mx-auto py-10"
    id="gallery"
>
    {
        Array.from({ length: 6 }).map((_, i) => (
            <a
                class="rounded-xl shadow-xl shadow-yellow-300/10 hover:shadow-2xl hover:shadow-yellow-300/75 transition-all overflow-hidden hover:scale-105"
                href={`/images/img-${i + 1}.webp`}
                data-pswp-width="1152"
                data-pswp-height="767"
            >
                <img
                    loading="lazy"
                    src={`/images/img-${i + 1}-thumb.webp`}
                    alt=""
                    class="h-full w-full object-cover"
                />
            </a>
        ))
    }
</div>

<script>
    import PhotoSwipeLightbox from "photoswipe/lightbox";

    const lightbox = new PhotoSwipeLightbox({
        gallery: "#gallery",
        children: "a",
        pswpModule: () => import("photoswipe"),
    });
    lightbox.init();
</script>
