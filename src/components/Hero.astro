---
import Whatsapp from "../components/icons/Whatsapp.astro";
import Outlook from "./icons/Outlook.astro";
---

<div class="w-full h-[400px] mt-20">
    <div class="flex flex-col text-center">
        <!-- <img src="/images/logo_mega_herreria.webp" class="w-48 h-48" alt="" /> -->
        <div>
            <span class="text-gray-900 font-semibold"
                >Creando soluciones metálicas a medida con precisión y
                dedicación.</span
            >
        </div>
        <div class="w-full h-30 text-8xl uppercase text-[#ffb703] break-words">
            <h1 class="font-bold">MegaHerreria</h1>
        </div>
        <div>
            <p class="text-gray-900 font-semibold my-8">
                ¡Transformamos tus proyectos en realidad!
            </p>
        </div>
    </div>
    <div class="text-center">
        <button
            type="button"
            class="text-gray-900 hover:bg-green-600 bg-green-500 border border-gray-600 focus:ring-4 focus:outline-none focus:ring-gray-100 font-medium text-xl rounded-lg px-5 py-2 text-center inline-flex items-center me-2"
        >
            Enviar mensaje por
            <Whatsapp class="size-6 ml-3" />
        </button><button
            type="button"
            class="text-gray-900 hover:bg-blue-600 bg-blue-500 border border-gray-600 focus:ring-4 focus:outline-none focus:ring-gray-100 font-medium rounded-lg text-xl px-5 py-2 text-center inline-flex items-center me-2"
        >
            Enviar correo
            <Outlook class="size-6 ml-3" />
        </button>
    </div>
</div>
